{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "lib": ["dom", "es2018"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/cjs",
        "strict": true,
        "target": "es2018"
    },
    "include": ["src", "typings"]
}
